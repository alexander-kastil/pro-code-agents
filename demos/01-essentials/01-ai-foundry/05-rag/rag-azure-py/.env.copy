###############################################################################
# Environment configuration template for the RAG Azure Policy Vector Demo
# Copy this file to `.env` and fill in the required values.
###############################################################################

# Azure AI Project endpoint (from Azure AI Studio project)
PROJECT_ENDPOINT=https://your-ai-project.services.ai.azure.com/api/projects/your-project-name

# Embeddings model deployment name (Azure OpenAI or Azure AI Inference)
EMBEDDINGS_MODEL=text-embedding-ada-002

# Endpoint hosting the embeddings deployment (Azure OpenAI or Azure AI Inference)
AZURE_AI_MODELS_ENDPOINT=https://your-openai-resource.openai.azure.com/
# If using API key auth (optional). Leave blank to use DefaultAzureCredential.
AZURE_AI_MODELS_KEY=your_openai_api_key_optional

# Local assets directory of raw policy markdown files
ASSETS_DIR=./assets/policies

# Storage account configuration (used for processed JSON + assets upload)
STORAGE_ACCOUNT_NAME=your_storage_account_name
STORAGE_CONTAINER_NAME=policy-uploads
STORAGE_CONNECTION_STRING=your_storage_connection_string

# Name of the processed documents JSON blob produced by preprocessing/upload
PROCESSED_BLOB_NAME=processed_documents_for_vectorization.json

# Azure AI Search configuration
SEARCH_SERVICE_NAME=your_search_service_name
SEARCH_SERVICE_ENDPOINT=https://your-search-service.search.windows.net
SEARCH_ADMIN_KEY=your_search_service_admin_key
# Name of the search index to create (will be overwritten if exists)
SEARCH_INDEX_NAME=insurance-documents-index

# Optional: adjust chunking (defaults shown)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Uncomment if you later add semantic model or other advanced settings
# INTENT_MAPPING_MODEL=gpt-4.1-mini
# EVALUATION_MODEL=gpt-4.1-mini

###############################################################################
# After setting values run:
#   uv sync
#   uv run python upload-policies.py
#   uv run python create_vectorized_index.py
###############################################################################