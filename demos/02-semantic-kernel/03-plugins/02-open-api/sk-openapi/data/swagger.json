{
  "openapi": "3.0.1",
  "info": {
    "title": "Currency Converter API",
    "version": "1.0.0",
    "description": "Retrieves currency conversion rates and converts amounts between different currencies."
  },
  "paths": {
    "/convertTo": {
      "post": {
        "summary": "Convert currency (POST)",
        "operationId": "convert_currency_post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConversionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conversion result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResult"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "summary": "Convert currency (GET)",
        "operationId": "convert_currency_get",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "description": "Source currency code (ISO 4217)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to",
            "in": "query",
            "description": "Target currency code (ISO 4217)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "amount",
            "in": "query",
            "description": "Amount to convert",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "date",
            "in": "query",
            "description": "Date for historical rates (YYYY-MM-DD)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversion result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConversionResult"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ConversionRequest": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "description": "Source currency code (ISO 4217)",
            "example": "USD"
          },
          "to": {
            "type": "string",
            "description": "Target currency code (ISO 4217)",
            "example": "EUR"
          },
          "amount": {
            "type": "number",
            "description": "Amount to convert",
            "example": 100
          },
          "date": {
            "type": "string",
            "description": "Date for historical rates (YYYY-MM-DD)",
            "example": "2023-01-15",
            "nullable": true
          }
        },
        "required": ["from", "to", "amount"],
        "additionalProperties": false,
        "description": "Represents a request to convert currency."
      },
      "ConversionResult": {
        "type": "object",
        "properties": {
          "from": {
            "type": "string",
            "description": "Source currency code"
          },
          "to": {
            "type": "string",
            "description": "Target currency code"
          },
          "amount": {
            "type": "number",
            "description": "Original amount"
          },
          "result": {
            "type": "number",
            "description": "Converted amount"
          },
          "rate": {
            "type": "number",
            "description": "Conversion rate"
          },
          "date": {
            "type": "string",
            "description": "Date of the conversion rate",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Represents the result of a currency conversion."
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:7072/api"
    }
  ]
}
